<!-- res/drawable/button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed/Hovered state -->
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/teal_700" /> <!-- Change color for pressed state -->
            <corners android:radius="50dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E7C938" /> <!-- Default color -->
            <corners android:radius="40dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
